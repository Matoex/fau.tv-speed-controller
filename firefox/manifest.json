{
    "manifest_version": 2,
    "name": "FAU.TV playback speed controller",
    "description": "Controls the playback speed of your FAU.tv video",
    "version": "1.0.0",
    "author": "Matthias Bretting",
    "content_scripts": [
        {
            "matches": [
                "*://www.fau.tv/*",
                "*://www.studon.fau.de/*"
            ],
            "js": [
                "injectedFau.js"
            ]
        }
    ],
    "background": {
        "persistent": false,
        "scripts": [
            "background.js"
        ]
    },
    "page_action": {
        "default_icon": {
            "16": "images/logo32.png",
            "24": "images/logo32.png",
            "32": "images/logo32.png",
            "48": "images/logo32.png",
            "128": "images/logo32.png"
        },
        "default_title": "FAU.TV playback speed",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "images/logo32.png",
        "24": "images/logo32.png",
        "32": "images/logo32.png",
        "48": "images/logo32.png",
        "128": "images/logo32.png"
    },
    "permissions": [
        "activeTab",
        "tabs"
    ]
}